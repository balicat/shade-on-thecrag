{
  "manifest_version": 3,
  "name": "SunShade â€” Shade on theCrag",
  "version": "1.2",
  "description": "See sun and shade times for climbing routes on theCrag.com, powered by sunshade.info.",
  "content_scripts": [
    {
      "matches": [
        "*://www.thecrag.com/*/route/*",
        "*://www.thecrag.com/route/*",
        "*://www.thecrag.com/*/area/*",
        "*://www.thecrag.com/area/*"
      ],
      "js": ["suncalc.js", "shade-overlay.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [],
  "host_permissions": [
    "https://sunshade.info/*"
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
